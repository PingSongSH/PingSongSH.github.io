                        div Graphic flow having unlimited number of connections between shapes
            div.about-other-experience.aright
                div.about-experience
                    div.about-experience-title.text-center education
                    div.about-experience-content
                        div.text-center
                            img(src='#{imgpre}/icons/tongji.png')
                        div.text-center
                            span Master of Art Design
                        div.text-center(style='margin-top:20px;')
                            img(src='#{imgpre}/icons/shiyou.png')
                        div.text-center
                            span Bachelor of Industry Design
            script.
                var rs = function() {
                    $('.about-other-experience').css('height', 'auto');
                    if(window.innerWidth > 520 && window.innerWidth <= 920) {
                        var maxH = 0;
                        $('.about-other-experience.first2').each(function () {
                            if($(this).outerHeight() > maxH)
                                maxH = $(this).outerHeight();
                        });
                        $('.about-other-experience.first2').css('height', maxH + 'px');
                    }
                    else if(window.innerWidth > 920) {
                        var maxH = 0;
                        $('.about-other-experience').each(function () {
                            if($(this).outerHeight() > maxH)
                                maxH = $(this).outerHeight();
                        });
                        $('.about-other-experience').css('height', maxH + 'px');
                    }
                }
                $(window).on('resize', rs);
                rs();
